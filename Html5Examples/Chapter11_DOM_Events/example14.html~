<!-- Event delegation -->
<!DOCTYPE html>
<html lang="en">
  <body>

    <p>Click a table cell</p>

    <table border="1">
      <tbody>
	<tr><td>row 1 column 1</td></tr>
	<tr><td>row 2 column 1</td></tr>
	<tr><td>row 3 column 1</td></tr>
	<tr><td>row 4 column 1</td></tr>
	<tr><td>row 5 column 1</td></tr>
	<tr><td>row 6 column 1</td></tr>
      </tbody>
    </table>

    <script>

      document.querySelector('table').addEventListener('click',function(event){
        if (event.target.tagName.toLowerCase() === 'td' ) {
          d.write(event.target.textContent);
        }
      },false);

    </script>
  </body>
</html>

    
